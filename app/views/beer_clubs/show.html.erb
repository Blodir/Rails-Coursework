<p id="notice"><%= notice %></p>

<h2>
  <%= "#{@beer_club.name} #{@beer_club.city}" %>
</h2>

<p>
  Founded <%= @beer_club.founded %>
</p>

<% if @beer_club.members.any? %>

  <h3>Members</h3>

  <ul>
    <% @beer_club.members.each do |member| %>
      <li>
      <%= link_to member.username, member %>
      </li>
    <% end %>
  </ul>

<% else %>

  <p>
    no members
  </p>

<% end %>
<% if not current_user.in?(@beer_club.members) || current_user.nil?  %>
    <%= form_for(@membership) do |f| %>
        <%= f.hidden_field :beer_club_id %>
        <%= f.submit class:'btn btn-primary', value:"join the club" %>
    <% end %>
<% end %>

<% if current_user.in?(@beer_club.members) %>
    <%= form_for(@membership, method: "delete") do |f| %>
        <%= f.hidden_field :beer_club_id %>
        <%= f.submit class:'btn btn-danger', value: "end the membership" %>
    <% end %>
<% end %>
<%= link_to 'Edit', edit_beer_club_path(@beer_club) if current_user %>
